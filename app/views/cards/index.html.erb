<!--Title -->
<section class="content hero is-primary">
  <div class="hero-body">
    <h1 class="title">Pokemon Cards</h1>
  </div>
</section>
<!-- Each card is displayed in a nested tile layout -->

<div class="level">
  <div class="level-item">
    <h2 class="title is-3">Results: <%= @cards.length() %></h2>
  </div>
</div>
<%= render 'displaycards' %>
<section class="section has-background-primary	">
  <nav class="level ">
    <div class="level-item">
      <div>
        <%= paginate @cards %>
      </div>
    </div>
  </nav>
</section>