<section class="content hero is-primary pl-6 mt-4">
  <div class="hero-body">
    <h1 class="title">Types</h1>
    <p class="subtitle mt-2">Click on one of the types listed below to view a table of all cards that belong to that type.</p>
  </div>
</section>
<div class="container pt-5 has-text-centered">
  <div class="columns is-multiline mt-5">
    <% for type in @types %>
      <div class="column is-half block">
        <p class="subtitle is-5"><%= link_to type.name, type %></p>
      </div>
    <% end %>
  </div>
</div>
<div class="section">
</div>
